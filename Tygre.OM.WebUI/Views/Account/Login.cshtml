@model Tygre.OM.Entities.DtoModels.DTOLogin
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @{await Html.RenderPartialAsync("_Styles");}
    <link href="~/Content/Login.css" rel="stylesheet" />
</head>
<body class="text-center">

    <form class="form-signin" method="post" asp-controller="Account" asp-action="Login">

        <img class="mb-4" src="~/Content/images/logo.png"  alt="" width="170">

        <h1 class="h3 mb-3 font-weight-normal">Lütfen Giriş Yapınız</h1>
        @if (ViewData.ModelState["CustomError"] != null && ViewData.ModelState["CustomError"].Errors.Count > 0)
        {
            <div class="alert alert-danger" role="alert">
                @Html.ValidationMessage("CustomError")
            </div>
        }

        <label class="sr-only">Personel Name</label>
        <input type="text" asp-for="PersonelAdi" class="form-control" placeholder="Personel Adı" required>

        <label class="sr-only">Password</label>
        <input type="password" asp-for="PersonelSifre" class="form-control" placeholder="Şifre" required>


        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Beni Hatırla
            </label>
        </div>

        <button class="btn btn-lg btn-dark btn-block" type="submit">Giriş Yap</button>
        <p class="mt-5 mb-3 text-muted">© 2017-2018</p>


    </form>

    @{await Html.RenderPartialAsync("_Scripts");}
</body>
</html>
